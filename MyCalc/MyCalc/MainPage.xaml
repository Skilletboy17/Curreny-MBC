    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="Calculate" Content="Calculate" HorizontalAlignment="Left" Height="111" Margin="948,682,0,0" VerticalAlignment="Top" Width="376"/>
